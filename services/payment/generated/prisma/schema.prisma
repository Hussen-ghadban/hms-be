generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payment {
  id        String      @id @default(uuid())
  amount    Float
  hotelId   String
  currency  String
  reason    String // e.g., "Maintenance", "Supplies", "Guest Refund"
  type      PaymentType // e.g., REFUND, EXPENSE, SALARY
  recipient String? // e.g., person or vendor name
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  guestId String?
}

model Payout {
  id           String     @id @default(uuid())
  amount       Float
  hotelId      String
  currencyId   String
  source       String // e.g., "Guest", "Partner", "OTA"
  type         PayoutType // e.g., GUEST_PAYMENT, CREDIT, SUBSIDY
  reference    String? // e.g., invoice, transaction code
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  guestId      String?
  folioItemIds String[]
}

enum PaymentType {
  REFUND
  EXPENSE
  MAINTENANCE
  SUPPLY_PURCHASE
  SALARY
  OTHER
}

enum PayoutType {
  GUEST_PAYMENT
  CITY_LEDGER
  SUBSIDY
  CREDIT
  OTHER
}
