enum RoomCleaningStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELED
}

enum FolioType {
  ROOM_CHARGE
  FOOD_BEVERAGE
  TELEPHONE
  LAUNDRY
  SPA
  MINIBAR
  PARKING
  WIFI
  TAX
  CITY_TAX
  SERVICE_CHARGE
  INCIDENTAL
  PAYMENT_CASH
  PAYMENT_CARD
  PAYMENT_TRANSFER
  ADJUSTMENT_CREDIT
  ADJUSTMENT_DEBIT
  COMP // Complimentary
  VOID
}

enum FolioStatus {
  OPEN
  CLOSED
  VOIDED
  TRANSFERRED
}

enum RoomStatus {
  AVAILABLE
  OCCUPIED
  MAINTENANCE
  DIRTY
  CLEANING
  RESERVED
  OUT_OF_SERVICE
}

enum AdjType {
  PERCENT
  FIXED
}

enum ReservationStatus {
  DRAFT
  CONFIRMED
  CHECKED_IN
  CHECKED_OUT
  CANCELLED
  NO_SHOW
  HELD
}
